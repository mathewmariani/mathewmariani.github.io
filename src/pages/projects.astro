  <article id="projects">

    <!-- clubrugby.ca -->
    <hr>
    <section class="project">
      <h2><a href="https://clubrugby.ca">ClubRugby.ca</a></h2>
      <p>A centralized platform to view fixtures, scores, and schedules for club rugby teams in Canada.</p>
      <h4>Technologies used</h4>
      <ul>
        <li class="badge rounded-pill text-bg-primary">VueJS</li>
        <li class="badge rounded-pill text-bg-primary">Python</li>
      </ul>
    </section>

    <!-- interactive-demos -->
    <hr>
    <section class="project">
      <h2><a href="https://mathewmariani.com/interactive-demos">Interactive Demos</a></h2>
      <p>Interactive demos inspired by Amit Patel.</p>
      <h4>Technologies used</h4>
      <ul>
        <li class="badge rounded-pill text-bg-primary">VueJS</li>
        <li class="badge rounded-pill text-bg-primary">C++</li>
        <li class="badge rounded-pill text-bg-primary">cmake</li>
        <li class="badge rounded-pill text-bg-primary">WebAssembly</li>
